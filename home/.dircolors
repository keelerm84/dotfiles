.zip  00;31
.zoo  00;31
.z    00;31
.Z    00;31
.gz   00;31
.bz2  00;31
.tb2  00;31
.tz2  00;31
.tbz2 00;31
.xz   00;31
.rar  00;31

# image formats
.avi  00;35
.bmp  00;35
.fli  00;35
.gif  00;35
.jpg  00;35
.jpeg 00;35
